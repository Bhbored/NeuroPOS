<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="NeuroPOS.MVVM.Popups.BuyingTransactionPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:VM="clr-namespace:NeuroPOS.MVVM.ViewModel"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="VM:InventoryVM"
    BackgroundColor="Transparent"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <Border
        Padding="32"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="0"
        WidthRequest="700">
        <Border.Shadow>
            <Shadow
                Brush="Black"
                Opacity="0.3"
                Radius="25"
                Offset="0,10" />
        </Border.Shadow>

        <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">
            <!--  Header Section  -->
            <VerticalStackLayout
                Grid.Row="0"
                Margin="0,0,0,24"
                Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <Border
                        BackgroundColor="#28A745"
                        HeightRequest="48"
                        StrokeShape="Ellipse"
                        WidthRequest="48">
                        <Label
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="ðŸ“¦"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </Border>
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="22"
                            Text="New Buying Transaction"
                            TextColor="{StaticResource NPTextMain}" />
                        <Label
                            FontSize="14"
                            Text="Purchase products for inventory"
                            TextColor="{StaticResource NPTextSecondary}" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--  Divider  -->
            <BoxView
                Grid.Row="1"
                Margin="0,0,0,24"
                BackgroundColor="{StaticResource NPDivider}"
                HeightRequest="1" />

            <!--  Product Entries Container  -->
            <ScrollView Grid.Row="2" MaximumHeightRequest="400">
                <VerticalStackLayout x:Name="ProductEntriesContainer" Spacing="16">
                    <!--  Dynamic product entries will be added here  -->
                </VerticalStackLayout>
            </ScrollView>

            <!--  Add More Product Button  -->
            <Button
                x:Name="AddMoreProductButton"
                Grid.Row="3"
                Margin="0,16,0,0"
                Padding="12,8"
                BackgroundColor="Transparent"
                BorderColor="{StaticResource NPPrimaryBlue}"
                BorderWidth="1"
                Clicked="OnAddMoreProductClicked"
                CornerRadius="8"
                FontFamily="PoppinsBold"
                FontSize="14"
                HorizontalOptions="Start"
                Text="âž• Add Another Product"
                TextColor="{StaticResource NPPrimaryBlue}" />

            <!--  Total and Action Buttons  -->
            <Grid
                Grid.Row="4"
                Margin="0,24,0,0"
                RowDefinitions="Auto,Auto">

                <!--  Total Transaction Amount  -->
                <Border
                    Grid.Row="0"
                    Padding="16"
                    BackgroundColor="{StaticResource NPLightBg}"
                    Stroke="{StaticResource NPDivider}"
                    StrokeShape="RoundRectangle 8"
                    StrokeThickness="1">
                    <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="16"
                            Text="Total Transaction Amount:"
                            TextColor="{StaticResource NPTextMain}"
                            VerticalOptions="Center" />
                        <Label
                            x:Name="TotalAmountLabel"
                            FontFamily="PoppinsBold"
                            FontSize="20"
                            Text="$0.00"
                            TextColor="#28A745"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>

                <!--  Action Buttons  -->
                <HorizontalStackLayout
                    Grid.Row="1"
                    HorizontalOptions="End"
                    Spacing="12">
                    <Button
                        x:Name="CancelButton"
                        Padding="20,12"
                        BackgroundColor="Transparent"
                        BorderColor="{StaticResource NPDivider}"
                        BorderWidth="1"
                        Clicked="OnCancelClicked"
                        CornerRadius="10"
                        FontFamily="PoppinsBold"
                        FontSize="16"
                        Text="Cancel"
                        TextColor="{StaticResource NPTextMain}" />
                    <Button
                        x:Name="AddTransactionButton"
                        Padding="20,12"
                        BackgroundColor="#28A745"
                        Clicked="OnAddTransactionClicked"
                        CornerRadius="10"
                        FontFamily="PoppinsBold"
                        FontSize="16"
                        Text="âœ“ Add Transaction"
                        TextColor="White" />
                </HorizontalStackLayout>
            </Grid>
        </Grid>
    </Border>
</toolkit:Popup> 