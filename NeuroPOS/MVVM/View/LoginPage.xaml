<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NeuroPOS.MVVM.View.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Login"
    BackgroundColor="{StaticResource NPLightBg}">

    <ScrollView>
        <Grid Padding="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header Section  -->
            <VerticalStackLayout
                Grid.Row="0"
                Margin="0,60,0,40"
                HorizontalOptions="Center"
                Spacing="16">

                <!--  Logo/Icon Placeholder  -->
                <Border
                    Margin="0,0,0,20"
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    StyleClass="ModernCardShadow"
                    WidthRequest="80">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0.0" Color="{StaticResource NPPrimaryBlue}" />
                            <GradientStop Offset="1.0" Color="{StaticResource NPAccentYellow}" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Label
                        FontFamily="PoppinsBold"
                        FontSize="32"
                        HorizontalOptions="Center"
                        Text="NP"
                        TextColor="White"
                        VerticalOptions="Center" />
                </Border>

                <!--  Welcome Text  -->
                <Label
                    HorizontalOptions="Center"
                    StyleClass="LargeTitle"
                    Text="Welcome to NeuroPOS" />

                <Label
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    StyleClass="SubtitleText"
                    Text="Sign in to your account to continue" />
            </VerticalStackLayout>

            <!--  Login Form  -->
            <VerticalStackLayout
                Grid.Row="1"
                Spacing="24"
                VerticalOptions="Center">

                <!--  Username Entry  -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        StyleClass="NormalText"
                        Text="Username"
                        TextColor="{StaticResource NPTextSecondary}" />

                    <Border StyleClass="ModernEntry">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid Padding="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Text="👤"
                                VerticalOptions="Center" />

                            <Entry
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                FontFamily="PoppinsRegular"
                                FontSize="14"
                                Placeholder="Enter your username"
                                PlaceholderColor="{StaticResource NPTextMuted}"
                                TextColor="{StaticResource NPTextMain}" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!--  Password Entry  -->
                <VerticalStackLayout Spacing="8">
                    <Label
                        StyleClass="NormalText"
                        Text="Password"
                        TextColor="{StaticResource NPTextSecondary}" />

                    <Border StyleClass="ModernEntry">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Grid Padding="16,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                Margin="0,0,12,0"
                                FontSize="16"
                                Text="🔒"
                                VerticalOptions="Center" />

                            <Entry
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                FontFamily="PoppinsRegular"
                                FontSize="14"
                                IsPassword="True"
                                Placeholder="Enter your password"
                                PlaceholderColor="{StaticResource NPTextMuted}"
                                TextColor="{StaticResource NPTextMain}" />

                            <Button
                                Grid.Column="2"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                StyleClass="ActionButton"
                                Text="👁" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!--  Remember Me & Forgot Password  -->
                <Grid Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <HorizontalStackLayout Grid.Column="0" Spacing="8">
                        <CheckBox Color="{StaticResource NPPrimaryBlue}" />
                        <Label
                            StyleClass="NormalText"
                            Text="Remember me"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <Button
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        StyleClass="ActionButton"
                        Text="Forgot Password?"
                        TextColor="{StaticResource NPPrimaryBlue}" />
                </Grid>

                <!--  Login Button  -->
                <Button
                    Margin="0,16,0,0"
                    StyleClass="PrimaryButton"
                    Text="Sign In" />

                <!--  Divider  -->
                <Grid Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <BoxView
                        Grid.Column="0"
                        HeightRequest="1"
                        VerticalOptions="Center"
                        Color="{StaticResource NPDivider}" />

                    <Label
                        Grid.Column="1"
                        Margin="16,0"
                        StyleClass="NormalText"
                        Text="or"
                        TextColor="{StaticResource NPTextMuted}" />

                    <BoxView
                        Grid.Column="2"
                        HeightRequest="1"
                        VerticalOptions="Center"
                        Color="{StaticResource NPDivider}" />
                </Grid>

                <!--  Alternative Login Options  -->
                <HorizontalStackLayout
                    Margin="0,16,0,0"
                    HorizontalOptions="Center"
                    Spacing="16">

                    <Border
                        HeightRequest="48"
                        HorizontalOptions="Center"
                        StyleClass="SecondaryButton"
                        WidthRequest="48">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="G"
                            TextColor="{StaticResource NPPrimaryBlue}"
                            VerticalOptions="Center" />
                    </Border>

                    <Border
                        HeightRequest="48"
                        HorizontalOptions="Center"
                        StyleClass="SecondaryButton"
                        WidthRequest="48">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="18"
                            HorizontalOptions="Center"
                            Text="f"
                            TextColor="{StaticResource NPPrimaryBlue}"
                            VerticalOptions="Center" />
                    </Border>

                    <Border
                        HeightRequest="48"
                        HorizontalOptions="Center"
                        StyleClass="SecondaryButton"
                        WidthRequest="48">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="14"
                            HorizontalOptions="Center"
                            Text="in"
                            TextColor="{StaticResource NPPrimaryBlue}"
                            VerticalOptions="Center" />
                    </Border>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--  Footer  -->
            <VerticalStackLayout
                Grid.Row="2"
                Margin="0,40,0,20"
                HorizontalOptions="Center"
                Spacing="8">

                <Label
                    HorizontalOptions="Center"
                    StyleClass="NormalText"
                    Text="Don't have an account?"
                    TextColor="{StaticResource NPTextSecondary}" />

                <Button
                    BackgroundColor="Transparent"
                    HorizontalOptions="Center"
                    StyleClass="ActionButton"
                    Text="Create Account"
                    TextColor="{StaticResource NPPrimaryBlue}" />
            </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>