<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="NeuroPOS.MVVM.Popups.CashPaymentPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Model="clr-namespace:NeuroPOS.MVVM.Model"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="Transparent"
    CanBeDismissedByTappingOutsideOfPopup="True"
    HeightRequest="400"
    WidthRequest="600">

    <Border
        BackgroundColor="White"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="0">
        <Border.Shadow>
            <Shadow
                Brush="Black"
                Opacity="0.3"
                Radius="20"
                Offset="0,8" />
        </Border.Shadow>

        <Grid Padding="24" RowDefinitions="Auto,Auto,*,Auto">
            <!--  Header  -->
            <VerticalStackLayout Grid.Row="0" Spacing="8">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="12">
                    <Border
                        BackgroundColor="#4CAF50"
                        HeightRequest="48"
                        StrokeShape="Ellipse"
                        WidthRequest="48">
                        <Label
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="ðŸ’µ"
                            VerticalOptions="Center" />
                    </Border>
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="20"
                            Text="Cash Payment"
                            TextColor="{StaticResource NPTextMain}" />
                        <Label
                            FontSize="14"
                            Text="Confirm your purchase"
                            TextColor="{StaticResource NPTextSecondary}" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--  Order Summary  -->
            <Border
                Grid.Row="1"
                Margin="0,20,0,0"
                BackgroundColor="#F8F9FA"
                Stroke="#E9ECEF"
                StrokeShape="RoundRectangle 12"
                StrokeThickness="1">
                <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Subtotal"
                        TextColor="{StaticResource NPTextSecondary}" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="14"
                        Text="{Binding Subtotal, StringFormat='${0:F2}'}"
                        TextColor="{StaticResource NPTextMain}" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        FontSize="14"
                        Text="{Binding TaxRate, StringFormat='Tax ({0:F1}%)'}"
                        TextColor="{StaticResource NPTextSecondary}" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="14"
                        Text="{Binding Tax, StringFormat='${0:F2}'}"
                        TextColor="{StaticResource NPTextMain}" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        FontSize="14"
                        Text="Discount"
                        TextColor="{StaticResource NPTextSecondary}" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="14"
                        Text="{Binding Discount, StringFormat='${0:F2}'}"
                        TextColor="{StaticResource NPTextMain}" />

                    <BoxView
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Margin="0,8"
                        BackgroundColor="#E9ECEF"
                        HeightRequest="1" />

                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        FontFamily="PoppinsBold"
                        FontSize="16"
                        Text="Total"
                        TextColor="{StaticResource NPTextMain}" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="1"
                        FontFamily="PoppinsBold"
                        FontSize="16"
                        Text="{Binding Total, StringFormat='${0:F2}'}"
                        TextColor="{StaticResource NPPrimaryBlue}" />
                </Grid>
            </Border>

            <!--  Cart Items  -->
            <ScrollView Grid.Row="2" Margin="0,16,0,0">
                <VerticalStackLayout Spacing="8">
                    <Label
                        FontFamily="PoppinsBold"
                        FontSize="16"
                        Text="Order Items"
                        TextColor="{StaticResource NPTextMain}" />

                    <CollectionView ItemsSource="{Binding CurrentOrderItems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="Model:Product">
                                <Border
                                    Margin="0,4"
                                    BackgroundColor="White"
                                    Stroke="#E9ECEF"
                                    StrokeShape="RoundRectangle 8"
                                    StrokeThickness="1">
                                    <Grid Padding="12" ColumnDefinitions="Auto,*,Auto">
                                        <Border
                                            Grid.Column="0"
                                            BackgroundColor="#F8F9FA"
                                            HeightRequest="40"
                                            StrokeShape="RoundRectangle 6"
                                            WidthRequest="40">
                                            <Image
                                                Margin="4"
                                                Aspect="AspectFit"
                                                Source="{Binding ImageUrl}" />
                                        </Border>

                                        <VerticalStackLayout
                                            Grid.Column="1"
                                            Margin="12,0,0,0"
                                            Spacing="4"
                                            VerticalOptions="Center">
                                            <Label
                                                FontFamily="PoppinsBold"
                                                FontSize="14"
                                                LineBreakMode="TailTruncation"
                                                Text="{Binding Name}"
                                                TextColor="{StaticResource NPTextMain}" />
                                            <Label
                                                FontSize="12"
                                                Text="{Binding Stock, StringFormat='Qty: {0}'}"
                                                TextColor="{StaticResource NPTextSecondary}" />
                                        </VerticalStackLayout>

                                        <Label
                                            Grid.Column="2"
                                            FontFamily="PoppinsBold"
                                            FontSize="14"
                                            Text="{Binding Price, StringFormat='${0:F2}'}"
                                            TextColor="{StaticResource NPPrimaryBlue}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>

            <!--  Action Buttons  -->
            <HorizontalStackLayout
                Grid.Row="3"
                Margin="0,20,0,0"
                Spacing="12">
                <Button
                    BackgroundColor="{StaticResource NPTextSecondary}"
                    Clicked="OnCancelClicked"
                    CornerRadius="8"
                    FontFamily="PoppinsBold"
                    HeightRequest="48"
                    Text="Cancel"
                    TextColor="White" />

                <Button
                    BackgroundColor="{StaticResource NPPrimaryBlue}"
                    Clicked="OnConfirmClicked"
                    CornerRadius="8"
                    FontFamily="PoppinsBold"
                    HeightRequest="48"
                    Text="Confirm Payment"
                    TextColor="White" />
            </HorizontalStackLayout>
        </Grid>
    </Border>
</toolkit:Popup>