<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NeuroPOS.MVVM.View.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource NPLightBg}"
    NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Grid Padding="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header Section  -->
            <VerticalStackLayout
                Grid.Row="0"
                Margin="0,60,0,40"
                HorizontalOptions="Center"
                Spacing="16">

                <!--  Logo/Icon Placeholder  -->
                <Border
                    Margin="0,0,0,20"
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    StyleClass="ModernCardShadow"
                    WidthRequest="80">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20" />
                    </Border.StrokeShape>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0.0" Color="{StaticResource NPPrimaryBlue}" />
                            <GradientStop Offset="1.0" Color="{StaticResource NPAccentYellow}" />
                        </LinearGradientBrush>
                    </Border.Background>
                    <Label
                        FontFamily="PoppinsBold"
                        FontSize="32"
                        HorizontalOptions="Center"
                        Text="NP"
                        TextColor="White"
                        VerticalOptions="Center" />
                </Border>

                <!--  Welcome Text  -->
                <Label
                    HorizontalOptions="Center"
                    StyleClass="LargeTitle"
                    Text="Welcome to NeuroPOS" />

                <Label
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    StyleClass="SubtitleText"
                    Text="Sign in to your account to continue" />
            </VerticalStackLayout>

            <!--  Login Form  -->
            <VerticalStackLayout
                Grid.Row="1"
                HorizontalOptions="Center"
                Spacing="28"
                VerticalOptions="Center"
                WidthRequest="320">

                <!--  Username Entry  -->
                <VerticalStackLayout Spacing="10">
                    <Label
                        Margin="0,0,0,4"
                        FontSize="13"
                        StyleClass="NormalText"
                        Text="Username"
                        TextColor="{StaticResource NPTextSecondary}" />

                    <Border HeightRequest="52" StyleClass="ModernEntry">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.04"
                                Radius="8"
                                Offset="0,2" />
                        </Border.Shadow>
                        <Grid Padding="18,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                Margin="0,0,14,0"
                                FontSize="18"
                                Text="ðŸ‘¤"
                                VerticalOptions="Center" />

                            <Entry
                                x:Name="UsernameEntry"
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                FontFamily="PoppinsRegular"
                                FontSize="15"
                                Placeholder="Enter your username"
                                PlaceholderColor="{StaticResource NPTextMuted}"
                                TextColor="{StaticResource NPTextMain}" />
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!--  Password Entry  -->
                <VerticalStackLayout Spacing="10">
                    <Label
                        Margin="0,0,0,4"
                        FontSize="13"
                        StyleClass="NormalText"
                        Text="Password"
                        TextColor="{StaticResource NPTextSecondary}" />

                    <Border HeightRequest="52" StyleClass="ModernEntry">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow
                                Brush="Black"
                                Opacity="0.04"
                                Radius="8"
                                Offset="0,2" />
                        </Border.Shadow>
                        <Grid Padding="18,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                Grid.Column="0"
                                Margin="0,0,14,0"
                                FontSize="18"
                                Text="ðŸ”’"
                                VerticalOptions="Center" />

                            <Entry
                                x:Name="PasswordEntry"
                                Grid.Column="1"
                                BackgroundColor="Transparent"
                                FontFamily="PoppinsRegular"
                                FontSize="15"
                                IsPassword="True"
                                Placeholder="Enter your password"
                                PlaceholderColor="{StaticResource NPTextMuted}"
                                TextColor="{StaticResource NPTextMain}" />


                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!--  Remember Me  -->
                <HorizontalStackLayout Margin="0,12,0,0" Spacing="10">
                    <CheckBox
                        x:Name="RememberMeCheckBox"
                        Scale="1.1"
                        Color="{StaticResource NPPrimaryBlue}" />
                    <Label
                        FontSize="13"
                        StyleClass="NormalText"
                        Text="Remember me"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  Login Button  -->
                <Button
                    Margin="0,32,0,0"
                    Clicked="OnLoginClicked"
                    FontSize="16"
                    HeightRequest="52"
                    StyleClass="PrimaryButton"
                    Text="Sign In" />
            </VerticalStackLayout>


        </Grid>
    </ScrollView>
</ContentPage>