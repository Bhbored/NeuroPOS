<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="NeuroPOS.MVVM.Popups.AddProductPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:VM="clr-namespace:NeuroPOS.MVVM.ViewModel"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="VM:InventoryVM"
    BackgroundColor="Transparent"
    CanBeDismissedByTappingOutsideOfPopup="True">

    <Border
        Padding="32"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 20"
        StrokeThickness="0"
        WidthRequest="500">
        <Border.Shadow>
            <Shadow
                Brush="Black"
                Opacity="0.3"
                Radius="25"
                Offset="0,10" />
        </Border.Shadow>

        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <!--  Header Section  -->
            <VerticalStackLayout
                Grid.Row="0"
                Margin="0,0,0,24"
                Spacing="8">
                <HorizontalStackLayout Spacing="12">
                    <Border
                        BackgroundColor="{StaticResource NPPrimaryBlue}"
                        HeightRequest="48"
                        StrokeShape="Ellipse"
                        WidthRequest="48">
                        <Label
                            FontSize="24"
                            HorizontalOptions="Center"
                            Text="âž•"
                            TextColor="White"
                            VerticalOptions="Center" />
                    </Border>
                    <VerticalStackLayout Spacing="4" VerticalOptions="Center">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="22"
                            Text="Add New Product"
                            TextColor="{StaticResource NPTextMain}" />
                        <Label
                            FontSize="14"
                            Text="Enter product details below"
                            TextColor="{StaticResource NPTextSecondary}" />
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--  Divider  -->
            <BoxView
                Grid.Row="1"
                Margin="0,0,0,24"
                BackgroundColor="{StaticResource NPDivider}"
                HeightRequest="1" />

            <!--  Form Content  -->
            <ScrollView Grid.Row="2" MaximumHeightRequest="400">
                <VerticalStackLayout Spacing="20">

                    <!--  Product ID (Auto-generated display)  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="12"
                            Text="PRODUCT ID"
                            TextColor="{StaticResource NPTextSecondary}" />
                        <Border
                            BackgroundColor="{StaticResource NPLightBg}"
                            Stroke="{StaticResource NPDivider}"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Label
                                Margin="16,12"
                                FontFamily="PoppinsBold"
                                FontSize="14"
                                Text="{Binding NewProductId, StringFormat='#{0:000}'}"
                                TextColor="{StaticResource NPTextSecondary}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Product Name  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="12"
                            Text="PRODUCT NAME"
                            TextColor="{StaticResource NPTextSecondary}" />
                        <Border
                            BackgroundColor="White"
                            Stroke="{StaticResource NPDivider}"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Entry
                                x:Name="ProductNameEntry"
                                Margin="16,4"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                Placeholder="Enter product name"
                                Text="{Binding NewProductName, Mode=TwoWay}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Price and Cost Row  -->
                    <Grid ColumnDefinitions="*,16,*" ColumnSpacing="0">
                        <!--  Price  -->
                        <VerticalStackLayout Grid.Column="0" Spacing="8">
                            <Label
                                FontFamily="PoppinsBold"
                                FontSize="12"
                                Text="SELLING PRICE"
                                TextColor="{StaticResource NPTextSecondary}" />
                            <Border
                                BackgroundColor="White"
                                Stroke="{StaticResource NPDivider}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="1">
                                <Entry
                                    Margin="16,4"
                                    BackgroundColor="Transparent"
                                    FontSize="16"
                                    Keyboard="Numeric"
                                    Placeholder="0.00"
                                    Text="{Binding NewProductPrice, Mode=TwoWay}" />
                            </Border>
                        </VerticalStackLayout>

                        <!--  Cost  -->
                        <VerticalStackLayout Grid.Column="2" Spacing="8">
                            <Label
                                FontFamily="PoppinsBold"
                                FontSize="12"
                                Text="COST PRICE"
                                TextColor="{StaticResource NPTextSecondary}" />
                            <Border
                                BackgroundColor="White"
                                Stroke="{StaticResource NPDivider}"
                                StrokeShape="RoundRectangle 10"
                                StrokeThickness="1">
                                <Entry
                                    Margin="16,4"
                                    BackgroundColor="Transparent"
                                    FontSize="16"
                                    Keyboard="Numeric"
                                    Placeholder="0.00"
                                    Text="{Binding NewProductCost, Mode=TwoWay}" />
                            </Border>
                        </VerticalStackLayout>
                    </Grid>

                    <!--  Category  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="12"
                            Text="CATEGORY"
                            TextColor="{StaticResource NPTextSecondary}" />
                        <Border
                            BackgroundColor="White"
                            Stroke="{StaticResource NPDivider}"
                            StrokeShape="RoundRectangle 10"
                            StrokeThickness="1">
                            <Picker
                                x:Name="CategoryPicker"
                                Title="Select Category"
                                Margin="16,4"
                                BackgroundColor="Transparent"
                                FontSize="16"
                                ItemDisplayBinding="{Binding Name}"
                                ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding NewProductCategory, Mode=TwoWay}" />
                        </Border>
                    </VerticalStackLayout>

                    <!--  Image Section  -->
                    <VerticalStackLayout Spacing="8">
                        <Label
                            FontFamily="PoppinsBold"
                            FontSize="12"
                            Text="PRODUCT IMAGE"
                            TextColor="{StaticResource NPTextSecondary}" />
                        <Border
                            BackgroundColor="{StaticResource NPLightBg}"
                            Stroke="{StaticResource NPDivider}"
                            StrokeShape="RoundRectangle 12"
                            StrokeThickness="1">
                            <Grid Padding="16" RowDefinitions="120,Auto">
                                <!--  Image Preview  -->
                                <Border
                                    Grid.Row="0"
                                    BackgroundColor="White"
                                    HeightRequest="120"
                                    HorizontalOptions="Center"
                                    Stroke="{StaticResource NPDivider}"
                                    StrokeShape="RoundRectangle 10"
                                    StrokeThickness="1"
                                    WidthRequest="120">
                                    <Image
                                        x:Name="ProductImagePreview"
                                        Aspect="AspectFill"
                                        HorizontalOptions="Center"
                                        Source="{Binding NewProductImageUrl}"
                                        VerticalOptions="Center" />
                                </Border>

                                <!--  Change Image Button  -->
                                <Button
                                    Grid.Row="1"
                                    Margin="0,12,0,0"
                                    BackgroundColor="{StaticResource NPPrimaryBlue}"
                                    Clicked="OnSelectImageClicked"
                                    CornerRadius="8"
                                    FontFamily="PoppinsBold"
                                    FontSize="14"
                                    HeightRequest="40"
                                    Text="ðŸ“· Select Image"
                                    TextColor="White" />
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>

            <!--  Action Buttons  -->
            <HorizontalStackLayout
                Grid.Row="3"
                Margin="0,24,0,0"
                HorizontalOptions="End"
                Spacing="12">
                <Button
                    x:Name="CancelButton"
                    Padding="20,12"
                    BackgroundColor="Transparent"
                    BorderColor="{StaticResource NPDivider}"
                    BorderWidth="1"
                    Clicked="OnCancelClicked"
                    CornerRadius="10"
                    FontFamily="PoppinsBold"
                    FontSize="16"
                    Text="Cancel"
                    TextColor="{StaticResource NPTextMain}" />
                <Button
                    x:Name="AddButton"
                    Padding="20,12"
                    BackgroundColor="{StaticResource NPPrimaryBlue}"
                    Clicked="OnAddClicked"
                    CornerRadius="10"
                    FontFamily="PoppinsBold"
                    FontSize="16"
                    Text="âœ“ Add Product"
                    TextColor="White" />
            </HorizontalStackLayout>
        </Grid>
    </Border>
</toolkit:Popup> 